<% include ../partials/header %>

<div class="container">
    <h1 class="row justify-content-center">EDIT <%= campground.name %></h1>
    <div class="row justify-content-center">
        <div class="col col-sm-12 col-lg-4">
            <form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input value="<%= campground.name %>" type="text" name="campground[name]" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="campground[price]" value="<%= campground.price %>" class="form-control" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input value="<%= campground.image %>" type="text" name="campground[image]" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="campground[description]" class="form-control" cols="30" rows="10"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campground">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>