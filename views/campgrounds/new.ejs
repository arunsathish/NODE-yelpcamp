<% include ../partials/header %>

<div class="container">
    <h1 class="row justify-content-center">Create a New Campground</h1>
    <div class="row justify-content-center">
        <div class="col col-sm-12 col-lg-4">
            <form action="/campground" method="POST">
                <div class="form-group">
                    <input type="text" name="name" placeholder="name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="price" placeholder="Price in $" class="form-control" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" name="image" placeholder="image url" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="description" placeholder="description" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campground">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>