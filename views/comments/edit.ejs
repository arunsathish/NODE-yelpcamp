<% include ../partials/header %>

<div class="container">
    <h2 class="row justify-content-center">Edit Comment</h2>
    <div class="row justify-content-center">
        <div class="col col-sm-12 col-lg-4">
            <form action="/campground/<%= campground_id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" value="<%= comment.text %>" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campground/<%= campground_id %>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>