<% include ../partials/header %>

<div class="container">
    <h2 class="row justify-content-center">Add New comment to <%= campground.name %></h2>
    <div class="row justify-content-center">
        <div class="col col-sm-12 col-lg-4">
            <form action="/campground/<%= campground._id %>/comment" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" placeholder="Comment text" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campground/<%= campground._id %>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>